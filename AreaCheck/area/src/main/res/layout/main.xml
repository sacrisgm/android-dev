<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/txt_check"
        android:id="@+id/txt_check"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"/>


    <EditText
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:inputType="number"
        android:ems="10"
        android:maxLength="1"
        android:id="@+id/edit_00"
        android:layout_alignParentLeft="true"
        android:background="#FFFFFF"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="100dp"
        android:gravity="center"/>
    <EditText
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:inputType="number"
        android:maxLength="1"
        android:ems="10"
        android:id="@+id/edit_01"
        android:background="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@id/edit_00"
        android:gravity="center"/>
    <EditText
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:inputType="number"
        android:maxLength="1"
        android:ems="10"
        android:id="@+id/edit_02"
        android:layout_alignParentRight="true"
        android:background="#FFFFFF"
        android:layout_marginRight="50dp"
        android:layout_alignTop="@id/edit_00"
        android:gravity="center"/>

    <EditText
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:inputType="number"
        android:maxLength="1"
        android:ems="10"
        android:id="@+id/edit_10"
        android:background="#FFFFFF"
        android:layout_alignLeft="@id/edit_00"
        android:layout_marginTop="50dp"
        android:layout_below="@id/edit_00"
        android:gravity="center"/>
    <EditText
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:inputType="number"
        android:maxLength="1"
        android:ems="10"
        android:id="@+id/edit_11"
        android:background="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@id/edit_10"
        android:gravity="center"/>
    <EditText
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:inputType="number"
        android:maxLength="1"
        android:ems="10"
        android:id="@+id/edit_12"
        android:background="#FFFFFF"
        android:layout_alignRight="@id/edit_02"
        android:layout_alignTop="@id/edit_10"
        android:gravity="center"/>

    <EditText
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:inputType="number"
        android:maxLength="1"
        android:ems="10"
        android:id="@+id/edit_20"
        android:layout_alignLeft="@id/edit_10"
        android:background="#FFFFFF"
        android:layout_marginTop="50dp"
        android:layout_below="@id/edit_10"
        android:gravity="center"/>
    <EditText
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:inputType="number"
        android:maxLength="1"
        android:ems="10"
        android:id="@+id/edit_21"
        android:background="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@id/edit_20"
        android:gravity="center"/>
    <EditText
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:inputType="number"
        android:maxLength="1"
        android:ems="10"
        android:id="@+id/edit_22"
        android:background="#FFFFFF"
        android:layout_alignRight="@id/edit_12"
        android:layout_alignTop="@id/edit_20"
        android:gravity="center"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_rst"
        android:id="@+id/btn_rst"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="44dp" />



</RelativeLayout>
